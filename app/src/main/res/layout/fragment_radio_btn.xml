<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".RadioBtn"
        tools:ignore="UselessLeaf">


<RadioGroup
    android:id="@+id/radio_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/question_radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="some question"
        android:textSize="@dimen/size_title_first_fragment"
        tools:ignore="SpUsage">
    </TextView>
    <RadioButton
        android:id="@+id/radio_first_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some option"
        android:textSize="20dp">
    </RadioButton>
    <RadioButton
        android:id="@+id/radio_second_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some option 2"
        android:textSize="20dp"
        tools:ignore="SpUsage">
    </RadioButton>

    <RadioButton
        android:id="@+id/radio_third_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some option 3"
        android:textSize="20dp"
        tools:ignore="SpUsage">
    </RadioButton>
    <RadioButton
        android:id="@+id/radio_fourth_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="some option 4"
        android:textSize="20dp"
        tools:ignore="SpUsage">
    </RadioButton>

</RadioGroup>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_back_fragment_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:background="@drawable/ic_baseline_navigate_before_24">
            </Button>
        <Button
            android:id="@+id/btn_next_fragment_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_navigate_next_24">
        </Button>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
</layout>