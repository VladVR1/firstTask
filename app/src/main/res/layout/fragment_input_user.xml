<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".InputUser"
        tools:ignore="UselessLeaf">

        <TextView
            android:id="@+id/question_input"
            android:text = "@string/input_answer"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SpUsage">
        </TextView>

        <EditText
            android:id="@+id/userAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/what_is_your_name"
            android:textSize="@dimen/size_title_first_fragment"
            tools:ignore="SpUsage"
            android:autofillHints="Vlad"
            android:inputType="textPersonName">
        </EditText>

        <Button
            android:id="@+id/first_btn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_to_first_btn"
            android:background="@drawable/ic_baseline_navigate_next_24"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

    </LinearLayout>
</layout>